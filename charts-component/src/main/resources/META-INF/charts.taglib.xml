<?xml version="1.0" encoding="utf-8"?>
<facelet-taglib
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facelettaglibrary_2_2.xsd"
    version="2.2">

    <namespace>http://ops4j.org/charts</namespace>
    <short-name>ch</short-name>
    
    <function>
        <function-name>min</function-name>
        <function-class>org.ops4j.charts.component.Functions</function-class>
        <function-signature>java.lang.String min()</function-signature>
    </function>
    

    <!-- Component Tags -->
    <tag>
        <description><![CDATA[Chart Component]]></description>
        <tag-name>chart</tag-name>
        <component>
            <component-type>org.ops4j.charts.component.Chart</component-type>
            <renderer-type>org.ops4j.charts.component.ChartRenderer</renderer-type>
        </component>
        <attribute>
            <description><![CDATA[Unique identifier of the component in a namingContainer.]]></description>
            <name>id</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description><![CDATA[Boolean value to specify the rendering of the component, when set to false component will not be rendered.]]></description>
            <name>rendered</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <description><![CDATA[An el expression referring to a server side UIComponent instance in a backing bean.]]></description>
            <name>binding</name>
            <required>false</required>
            <type>javax.faces.component.UIComponent</type>
        </attribute>
        <attribute>
            <description><![CDATA[Name of the client side widget.]]></description>
            <name>widgetVar</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description><![CDATA[Type of the chart.]]></description>
            <name>type</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description><![CDATA[Model of the chart.]]></description>
            <name>model</name>
            <required>false</required>
            <type>org.chartistjsf.model.chart.ChartModel</type>
        </attribute>
        <attribute>
            <description>
				<![CDATA[Inline style of the component.]]>
			</description>
            <name>style</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description><![CDATA[Style class of the component.]]></description>
            <name>styleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description><![CDATA[Name of JavaScript callback to build tooltip]]></description>
            <name>tooltipBuilder</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description><![CDATA[Specifies rendering of legend.]]></description>
            <name>showLegend</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <description><![CDATA[Specifies if legend is clickable. If true, clicking on an entry will 
            toggle visibility of the corresponding series or slice.]]></description>
            <name>legendClickable</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
    </tag>

</facelet-taglib>
